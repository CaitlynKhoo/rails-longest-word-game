<h1>New game</h1>
<div>
  <ul class='list-group list-group-horizontal'>
    <% @letters.each do |letter| %>
      <li class='list-group-item bg-primary text-white mr-2'><%= letter %></li>
    <% end %>
  </ul>

  <form action="/score" method="post" data-turbo="false">
    <label for="userT" class="mt-5">What is the longest word you can find?</label>
    <input id="userT" type="text" class="form-control" name="reply">
    <input type="submit" class="btn btn-light" value="Play">
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    <%= hidden_field_tag :oriletters, @letters %>
  </form>
</div>
